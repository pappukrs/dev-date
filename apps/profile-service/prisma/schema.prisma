// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String   @id
  githubId        String   @unique
  username        String
  displayName     String
  avatarUrl       String
  bio             String?
  techStack       String[]
  devScore        Int      @default(0)
  experienceLevel String // 'Junior' | 'Mid' | 'Senior' | 'Lead' NOT SUPPORTED AS ENUM IN SQLITE IF SWITCHED, BUT OK FOR POSTGRES
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("users")
}
